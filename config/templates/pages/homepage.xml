<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="fr">Page d'accueil</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="fr">Titre</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Adresse</title>
                <title lang="fr">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="article" type="checkbox">
            <meta>
                <title lang="en">Cacher la barre de recherche</title>
                <title lang="fr">Cacher la barre de recherch</title>
            </meta>
        </property>

        <property name="carousel" type="snippet_selection">
            <meta>
                <title lang="en">Fragment de la barre de recherche</title>
                <title lang="fr">Fragment de la barre de recherch</title>
            </meta>
        </property>

         <property name="croisieres-coup-de-coeur" type="snippet_selection">
            <meta>
                <title lang="en">Ajouter une liste de croisières coup de coeur</title>
                <title lang="fr">Ajouter une liste de croisières coup de coeur</title>
            </meta>
        </property>

         <property name="bas-de-page" type="snippet_selection">
            <meta>
                <title lang="en">Fragment de pied de page</title>
                <title lang="fr">Fragment de pied de page</title>
            </meta>
        </property>

         <property name="carte" type="snippet_selection">
            <meta>
                <title lang="en">Fragments de carte</title>
                <title lang="fr">Fragments de carte</title>
            </meta>
            <params>
                <param name="ligne1" value="" />
                <param name="ligne2" value="" />
                <param name="ligne3" value="" />
                <param name="ligne4" value="" />
            </params>
        </property>

    </properties>
</template>
